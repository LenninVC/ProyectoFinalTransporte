        </dt>

        <dd>
            @Html.DisplayFor(model => model.EmailPersonal)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Estado)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Estado)
        </dd>

    </dl>

    @Messages.Message("inUse", "Delete", "danger", "Este Producto está en uso en este momento.")

    @using (Ajax.BeginForm("Delete", new { Controller = "Colaborador" },
                            new AjaxOptions
                            {
                                HttpMethod = "POST",
                                InsertionMode = InsertionMode.Replace,
                                UpdateTargetId = "modal-body",
                                OnSuccess = "colaborador.success('delete');"
                            },
                            htmlAttributes: new { id = "deleteForm" }
                          )
            )
    {
        @Html.AntiForgeryToken()
        <div class="form-actions no-color" id="btn-save">
            <input type="submit" value="Delete" class="btn btn-default" />
        </div>
    }
</div>

<script type="text/javascript">
    $(function () {
        $.validator.unobtrusive.parse("#deleteForm");
        $('#inUse').addClass('hidden');
        colaborador.addCustomer("@Model.IdColaborador");
        colaborador.validate("@Model.IdColaborador");
    });

    colaborador.closeModal = function () {
        if (!colaborador.recordInUse)
            colaborador.removeHubCustomer("@Model.IdColaborador");
    };
</script>