            @Html.DisplayFor(model => model.Estado)
        </dd>

    </dl>

    @Messages.Message("inUse", "Delete", "danger", "Este Producto está en uso en este momento.")

    @using (Ajax.BeginForm("Delete", new { Controller = "Itinerario" },
                           new AjaxOptions
                           {
                               HttpMethod = "POST",
                               InsertionMode = InsertionMode.Replace,
                               UpdateTargetId = "modal-body",
                               OnSuccess = "itinerario.success('delete');"
                           },
                           htmlAttributes: new { id = "deleteForm" }
                         )
           )
    {
        @Html.AntiForgeryToken()
        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" />
        </div>
    }
</div>
<script type="text/javascript">
    $(function () {
        $.validator.unobtrusive.parse("#editForm");
        $('#inUse').addClass('hidden');
        itinerario.addItinerario("@Model.IdItinerario");
        itinerario.validate("@Model.IdItinerario");
    });

    itinerario.closeModal = function () {
        if (!itinerario.recordInUse)
            itinerario.removeHubItinerario("@Model.IdItinerario");
    };
</script>